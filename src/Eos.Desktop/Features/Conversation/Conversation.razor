@page "/conversation"
<h3>@_model.Title</h3>

<div class="d-flex flex-column">
   <div class="container mt-4">
      <div class="row mb-3">
         <div class="col-md-8">
            <input type="text" id="systemPromptInput" class="form-control" placeholder="Enter system prompt...">
         </div>
         <div class="col-md-4"></div>
      </div>

      <div class="bg-light rounded p-2 mb-4" style="height: 60vh; overflow-y: auto;">
         @foreach (var message in _model.Messages)
         {
            <Message Model="message"/> 
         }
      </div>

      <div class="row">
         <div class="col-md-8">
            <input type="text" id="userMessageInput" class="form-control" placeholder="Type your message...">
         </div>
         <div class="col-md-4"></div>
      </div>

      <div class="bg-light text-muted py-2 mt-3">
         Status: Connected
      </div>
   </div> 
</div>

@code {
   public Conversation(ConversationModel model)
   {
      _model = model;
   }

   private readonly ConversationModel _model;
}